= form_for @drink do |f|
  - if @drink.errors.any?
    #error_explanation
      %h2= "#{pluralize(@drink.errors.count, "error")} prohibited this drink from being saved:"
      %ul
        - @drink.errors.full_messages.each do |msg|
          %li= msg

  .field
    = f.label :name
    = f.text_field :name
  .field
    = f.label :bottleSize
    = f.text_field :bottleSize
  .field
    = f.label :caffeine
    = f.text_field :caffeine
  .field
    = f.label :donationRecommendation
    = f.text_field :donationRecommendation
  .field
    = f.label :logoUrl
    = f.text_field :logoUrl
  .actions
    = f.submit 'Save'
